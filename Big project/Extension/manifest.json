{
  "manifest_version": 3,
  "name": "AI Injection Detector",
  "version": "1.0",
  "description": "Scans the current page for hidden AI prompt injections.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "Popup/popup.html",
    "default_icon": "Images/Icon.png"
  }
}